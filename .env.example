# Database
DATABASE_URL=sqlite:///./copytrader.db
# For PostgreSQL: postgresql://user:password@localhost:5432/copytrader

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256

# Polymarket API (get these from Polymarket)
POLYMARKET_API_KEY=your-api-key-here
POLYMARKET_API_BASE_URL=https://api.polymarket.com/v1

# Trading Settings
GLOBAL_TRADING_MODE=TEST  # TEST or LIVE
GLOBAL_TRADING_STATUS=STOPPED  # RUNNING, PAUSED, STOPPED
DRY_RUN_ENABLED=true

# Monitoring
WALLET_POLL_INTERVAL=30
MAX_DAYS_TO_RESOLUTION=30
MIN_MARKET_VOLUME=1000.0

# Risk Management
MAX_RISK_PER_TRADE_PCT=2.0
MAX_OPEN_MARKETS=10
MAX_EXPOSURE_PER_MARKET=100.0
